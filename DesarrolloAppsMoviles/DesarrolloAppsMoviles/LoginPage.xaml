<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="DesarrolloAppsMoviles.LoginPage"  
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"  Spacing="40" Padding="30" Margin="0,50,0,30">
            <BoxView HeightRequest="40"/>
            <Image HorizontalOptions="Center" WidthRequest="300" Source="logo.jpg"/>
            <Frame  HasShadow="False">
                <StackLayout Orientation="Vertical" Spacing="10">
                    <Entry x:Name="UserName" Text="{Binding UserName}" Placeholder="Usuario"   
                           PlaceholderColor="Black" HeightRequest="40"   
                           Keyboard="Email"  
                           TextColor="Black"/>
                    <Entry x:Name="Password" Text="{Binding Password}" Placeholder="Contraseña"   
                           PlaceholderColor="Black" HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="Black"/>
                </StackLayout>
            </Frame>
            <Button Command="{Binding SubmitCommand}" Text="Login" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>  